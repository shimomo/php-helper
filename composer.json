{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "shimomo/helper",
    "description": "PHP Helper for Shimomo's Projects",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "shimomo",
            "email": "yuichi@shimomo.net"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1 || ^12.0",
        "vimeo/psalm": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Shimomo\\Helper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shimomo\\Helper\\Tests\\": "tests/"
        }
    }
}
